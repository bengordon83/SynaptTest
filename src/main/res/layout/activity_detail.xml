<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/cont_colored_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/div_center"/>

    <TextView
        android:id="@+id/date_and_time_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/div_center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/div_center"
        android:layout_centerVertical="true" />

    <TextView
        style="@style/Text_Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_message_body"
        android:layout_below="@id/div_center"
        tools:text="Synapt was designed to help people study, hopefully my I do better on finals this semester"/>

</RelativeLayout>